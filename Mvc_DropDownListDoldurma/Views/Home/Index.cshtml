
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
        </div>
    </div>
            <h2>DropdownList Doldurma</h2>

            <div class="row">

                <div class="col-md-10 col-md-offset-1">
                    @using(Html.BeginForm())
                     {
                     <div class="Form-horizontal">

                        <div class="form-group">
                            <label class="col-md-2 control-label">Şehir</label>

                            <div class="col-md-10">
                                @Html.DropDownList("SehirBilgisi", (SelectList)ViewBag.sehirler,"Lütfen seçiniz", new { @class = "form-control dropdown" })

                            </div>
                        </div>
                        <br /><br />
                        <div class="form-group">
                            <label class="col-md-2 control-label">Ulke</label>

                            <div class="col-md-10">
                                @Html.DropDownList("UlkeBilgisi", (SelectList)ViewBag.ulkeler,"Lütfen seçiniz", new { @class = "form-control dropdown" })

                            </div>
                        </div>
                        <br />
                        <div class="col-md-10 col-lg-offset-2">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Gönder</button>
                            </div>
                        </div>
                        <br /><br />
                        <div class="form-group">
                            <div class="col-md-10 col-lg-offset-2">
                                <div class="alert alert-info">
                                    Seçilen Ülke ID:@ViewBag.UlkeId
                                    <br />
                                    Seçilen Sehir ID:@ViewBag.SehirId
                                </div>
                            </div>
                        </div>
                     </div>

                     }
                </div>

            </div>
        
    
</body>
</html>
